<%= form_for(@club) do |f| %>
  <% if @club.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@club.errors.count, "error") %> prohibited this club from being saved:</h2>

      <ul>
      <% @club.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :member_number %><br>
    <%= f.number_field :member_number %>
  </div><br>

  <div class="field">
    <%= f.label :type_id %>
    <%= f.collection_select :type_id, Type.all, :id, :name %>
  </div><br>
  
  <div class="field">
    <h5>Members:</h5>
    <%= f.fields_for :members do |m| %>
      <%= m.label :name %>
      <%= m.text_field :name %><br>
      <%= m.label :position %>
      <%= m.text_field :position %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
